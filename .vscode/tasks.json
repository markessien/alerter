{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build wxWidgets App (MSVC)",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/MD",
                "/std:c++17",
                "/Fe:${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/I", "${workspaceFolder}\\wxWidgets\\include",
                "/I", "${workspaceFolder}\\wxWidgets\\lib\\vc_x64_lib\\mswu",
                "/link",
                "/LIBPATH:${workspaceFolder}\\wxWidgets\\lib\\vc_x64_lib",
                // wxWidgets Libraries
                "wxmsw32u.lib",
                "wxpng.lib",
                "wxjpeg.lib",
                "wxtiff.lib",
                "wxzlib.lib",
                "wxregexu.lib",
                "wxexpat.lib",
                // Windows System Libraries
                "kernel32.lib",
                "user32.lib",
                "gdi32.lib",
                "winspool.lib",
                "comdlg32.lib",
                "advapi32.lib",
                "shell32.lib",
                "ole32.lib",
                "oleaut32.lib",
                "uuid.lib",
                "comctl32.lib",
                "rpcrt4.lib",
                "wininet.lib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": { "reveal": "always" },
            "problemMatcher": "$msCompile"
        }
    ]
}