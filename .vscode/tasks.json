{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Resources",
            "type": "shell",
            "command": "rc.exe",
            "args": [
                "/fo",
                "${workspaceFolder}\\build\\icon.res",
                "${workspaceFolder}\\icon.rc"
            ],
            "group": "build"
        },
        {
            "label": "Build TelexStart - Release",
            "type": "shell",
            "command": "cl.exe",
            "dependsOn": "Compile Resources",
            "args": [
                "/EHsc",
                "/MT",
                "/D", "WXUSING_LIBS",
                "/D", "__WXMSW__",
                "/std:c++17",
                "/O2",
                "/Fe:${workspaceFolder}\\build\\telexstart.exe",
                "/Fo:${workspaceFolder}\\build\\",
                "/Fd:${workspaceFolder}\\build\\",
                "${workspaceFolder}\\*.cpp",
                "/I", "${workspaceFolder}\\wxWidgets\\include",
                "/I", "${workspaceFolder}\\wxWidgets\\lib\\vc_x64_lib\\mswu",
                "/link",
                "/LIBPATH:${workspaceFolder}\\wxWidgets\\lib\\vc_x64_lib",
                // wxWidgets Libraries
                "wxmsw32u_adv.lib",     // For advanced features like wxInitAllImageHandlers
                "wxmsw32u_core.lib",    // For GUI controls, sizers, windows
                "wxbase32u.lib",        // For base classes like wxString
                "wxpng.lib",
                "wxjpeg.lib",
                "wxtiff.lib",
                "wxzlib.lib",
                "wxregexu.lib",
                "wxexpat.lib",
                // Windows System Libraries
                "kernel32.lib",
                "user32.lib",
                "gdi32.lib",
                "winspool.lib",
                "comdlg32.lib",
                "advapi32.lib",
                "shell32.lib",
                "ole32.lib",
                "oleaut32.lib",
                "uuid.lib",
                "comctl32.lib",
                "rpcrt4.lib",
                "wininet.lib",
                "winmm.lib",
                "${workspaceFolder}\\build\\icon.res"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": { "reveal": "always" },
            "problemMatcher": "$msCompile"
        }
    ]
}