{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Resources",
            "type": "shell",
            "command": "rc.exe",
            "args": [
                "/fo",
                "${workspaceFolder}\\build\\icon.res",
                "${workspaceFolder}\\res\\icon.rc"
            ],
            "group": "build"
        },
        {
            "label": "Compile Resources (wxrc)",
            "type": "shell",
            "command": "${workspaceFolder}\\third_party\\wxWidgets\\utils\\wxrc\\vc_x64_mswu\\wxrc.exe",
            "args": [
                "${workspaceFolder}\\res\\resources.xrc",
                "--cpp-code",
                "--output=${workspaceFolder}\\res\\resources.cpp"
            ],
            "group": "build"
        },
        {
            "label": "Build TelexStart - Debug",
            "type": "shell",
            "command": "cl.exe",
            "dependsOn": [
                "Compile Resources",
                "Compile Resources (wxrc)"
            ],
            "args": [
                "/EHsc",
                "/MTd", // Use debug runtime library
                "/Zi",  // Generate debug information
                "/Od",  // Disable optimizations
                "/D", "WXUSING_LIBS",
                "/D", "__WXMSW__",
                "/D", "WXDEBUG", // Often used in wxWidgets for debug builds
                "/std:c++17",
                "/Fe:${workspaceFolder}\\build\\debug\\telexstart_d.exe", // Debug executable name
                "/Fo:${workspaceFolder}\\build\\debug\\",
                "/Fd:${workspaceFolder}\\build\\debug\\",
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\res\\resources.cpp",
                "${workspaceFolder}\\src\\ui\\*.cpp",
                "/I", "${workspaceFolder}\\include",
                "/I", "${workspaceFolder}\\third_party",
                "/I", "${workspaceFolder}\\res",
                "/I", "${workspaceFolder}\\third_party\\wxWidgets\\include",
                "/I", "${workspaceFolder}\\third_party\\wxWidgets\\lib\\vc_x64_lib\\mswud", 
                "/link",
                "/MANIFEST:EMBED",
                "/DEBUG", // Tell linker to include debug info
                "/LIBPATH:${workspaceFolder}\\third_party\\wxWidgets\\lib\\vc_x64_lib",                
                "wxmsw32ud_adv.lib",
                "wxmsw32ud_core.lib",
                "wxbase32ud.lib",
                "wxpngd.lib",
                "wxjpegd.lib",
                "wxtiffd.lib",
                "wxzlibd.lib",
                "wxregexud.lib",
                "wxexpatd.lib",
                "wxmsw32ud_xrc.lib",
                "wxmsw32ud_xrc.lib",    // XRC
                "wxbase32ud_xml.lib",   // XML
                "wxmsw32ud_html.lib",   // HTML
                // Windows System Libraries
                "kernel32.lib", "user32.lib", "gdi32.lib", "winspool.lib", 
                "comdlg32.lib", "advapi32.lib", "shell32.lib", "ole32.lib",
                "oleaut32.lib", "uuid.lib", "comctl32.lib", "rpcrt4.lib",
                "wininet.lib", "winmm.lib", "ws2_32.lib",
                "${workspaceFolder}\\build\\icon.res"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Make this the default build (Ctrl+Shift+B)
            },
            "presentation": { "reveal": "always" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build TelexStart - Release",
            "type": "shell",
            "command": "cl.exe",
            "dependsOn": [
                "Compile Resources",
                "Compile Resources (wxrc)"
            ],
            "args": [
                "/EHsc", "/MT", "/D", "WXUSING_LIBS", "/D", "__WXMSW__", 
                "/std:c++17", "/O2", "/Fe:${workspaceFolder}\\executables\\telexstart.exe",
                "/Fo:${workspaceFolder}\\build\\release\\", "/Fd:${workspaceFolder}\\build\\release\\",
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\src\\ui\\*.cpp",
                "${workspaceFolder}\\res\\resources.cpp",
                "/I", "${workspaceFolder}\\include",
                "/I", "${workspaceFolder}\\third_party",
                "/I", "${workspaceFolder}\\res",
                "/I", "${workspaceFolder}\\third_party\\wxWidgets\\include",
                "/I", "${workspaceFolder}\\third_party\\wxWidgets\\lib\\vc_x64_lib\\mswu",
                "/link", "/MANIFEST:EMBED", "/LIBPATH:${workspaceFolder}\\third_party\\wxWidgets\\lib\\vc_x64_lib",
                "wxmsw32u_adv.lib", "wxmsw32u_core.lib", "wxbase32u.lib", 
                "wxpng.lib", "wxjpeg.lib", "wxtiff.lib", "wxzlib.lib", 
                "wxmsw32u_xrc.lib",     // XRC
                "wxbase32u_xml.lib",    // XML
                "wxmsw32u_html.lib",    // HTML
                "wxmsw32u_xrc.lib",
                "wxregexu.lib", "wxexpat.lib", "kernel32.lib", "user32.lib", 
                "gdi32.lib", "winspool.lib", "comdlg32.lib", "advapi32.lib", 
                "shell32.lib", "ole32.lib", "oleaut32.lib", "uuid.lib", 
                "comctl32.lib", "rpcrt4.lib", "wininet.lib", "winmm.lib", "ws2_32.lib",
                "${workspaceFolder}\\build\\icon.res"
            ],
            "group": "build",
            "presentation": { "reveal": "always" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build TelexStart - All",
            "dependsOn": [
                "Build TelexStart - Debug",
                "Build TelexStart - Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}