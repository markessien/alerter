{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "telex-tauri-test",
  "identifier": "com.yourcompany.yourapp.dev",
  "version": "0.1.0",
  "build": {
    "devUrl": "http://localhost:5000",

    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Localhost App",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: http://localhost:5000 ws://localhost:5000",
      "capabilities": [
        {
          "identifier": "remote-access",
          "description": "Allows our remote site to call the greet command.",
          "windows": ["main"],
          "remote": {
            "urls": ["http://localhost:5000"]
          },
          "permissions": [
            "core:event:allow-emit" 
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}